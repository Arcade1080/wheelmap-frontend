{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "src/.next"
  ],
  "include": [
    "next-env.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
